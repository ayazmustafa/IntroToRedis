
@model List<string>
@{
    ViewData["Title"] = "Index";
}


<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded" style="margin-bottom: 2em">
    <div class="row">
        <div class="col-md-2">
            <input class="form-control" type="text" name="name" />
        </div>
        <div class="col-md-1">
            <button class="btn btn-outline-primary" type="submit">Save</button>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-danger" asp-action="DeleteFirstItem">Delete the First Element</a>
        </div>
    </div>
</form>

@foreach (var item in Model)
{
    <h2>@item <a class="btn btn-outline-danger" asp-controller="ListType" asp-action="DeleteItem" asp-route-name="@item">Delete</a></h2>
}